@charset "utf-8";

.headerWarp{width:100%;height:64px;padding-top:25px;border-bottom:1px solid #dcdee2;background:#333;}
.header{width:1000px;margin:0 auto;overflow:hidden;}
.header h1{float:left;}
.header ul{float:left;padding:0 30px 0 60px;}
.header ul li{float:left;font-size:20px;font-weight:bold;margin-left:50px;}
.header ul li:first-child{margin-left:0px;}
.header ul li a{color:#aaa;letter-spacing:-0.05em;display:block;height:62px;text-decoration:none;}
.header ul li.on{border-bottom:2px solid #fff;}
.header ul li.on a{color:#fff;}
.header button{float:left;width:88px;line-height:25px;background:#1089e6;color:#fff;text-align:center;font-size:12px;font-weight:bold;}

.footerWarp{width:100%;height:100px;background:#f9f9f9;border-top:2px solid #dcdee2;/*background:url('../images/bg/bg_footer.gif') repeat-x;*/}
.footer{width:1000px;margin:0 auto;}
.companyConnect{overflow:hidden;}
.companyConnect p{float:left;height:56px;line-height:56px;font-size:14px;font-weight:bold;color:#333;}
.companyConnect p:first-child{padding-right:30px;}
.companyConnect p span{color:#777;padding-right:5px;}
.companyConnect p .btn{padding:5px 10px 5px 27px;line-height:13px;margin-left:10px;border:1px solid #b8bbc0;font-size:12px;color:#555;}
.companyConnect p .btn.call{background:url('../images/common/btn_call.gif') no-repeat 10px center #f9f9f9;}
.companyConnect p .btn.mail{background:url('../images/common/btn_mail.gif') no-repeat 10px center #f9f9f9;}

.copySection{padding-top:20px;}
.copySection p{float:left;padding-top:6px;}
.copySection ul{float:left;padding-left:300px;}
.copySection ul li{font-size:14px;line-height:1em;padding-bottom:10px;color:#888;}

.btn{display:inline-block;border-radius:5px;}

.pager{font-size:0px;letter-spacing:0px;word-spacing:0px;margin:30px 0 0;text-align:center;}
.pager a{display:inline-block;width:30px;height:30px;line-height:30px;border-radius:50%;font-size:14px;color:#333;text-align:center;border:1px solid #dddfe3;margin-left:8px;vertical-align:middle;}
.pager a:first-child{margin:0;}
.pager a.on{background:#1089e6;border:1px solid #1089e6;color:#fff;}
.pager a img{vertical-align:middle;}
.pager .first{text-indent:-9999px;background:url('../images/common/btn_first.gif') no-repeat center center;}
.pager .end{text-indent:-9999px;background:url('../images/common/btn_last.gif') no-repeat center center;}
.pager .next{text-indent:-9999px;background:url('../images/common/btn_next.gif') no-repeat center center;}
.pager .prev{text-indent:-9999px;background:url('../images/common/btn_prev.gif') no-repeat center center;}

.searchSection{margin-top:30px;overflow:hidden;text-align:center;font-size:0px;letter-spacing:0px;word-spacing:0px}
.searchSection select{width:101px;height:30px;text-indent:5px;font-size:14px;font-weight:bold;border:1px solid #dcdee2;border-radius:5px;}
.searchSection input{width:220px;height:28px;font-size:14px;font-weight:bold;border:1px solid #dcdee2;border-radius:5px;margin:0 12px;}
.searchSection button{height:28px;width:56px;text-align:center;color:#555;font-weight:bold;border:1px solid #555;border-radius:5px;}

.file td{height:30px;line-height:30px;}
.file td img{vertical-align:middle;max-width: 300px;}

.noborder{border:none !important;}
