  <input type="hidden" id="smsYn" name="smsYn" value="" />
  <input type="hidden" id="mailYn" name="mailYn" value="" />
  <input type="hidden" id="gubun" name="gubun" value="" />
  <input type="hidden" id="memberPw" name="memberPw" value="" />
