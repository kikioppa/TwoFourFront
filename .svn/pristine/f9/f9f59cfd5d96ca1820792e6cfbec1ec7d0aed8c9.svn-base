@charset "UTF-8";
.input-text-wrap {
  width: 100%;
  input[type="text"],
  input[type="password"],
  input[type="number"],
  input[type="tel"],
  input[name="dates"],
  textarea {
    width: 100%;
    height: 100%;
    border: 0;
    box-sizing: border-box;
    font-size: rem(26);
    line-height: 1;
    border-radius: 0;
    &::placeholder,
    &::-webkit-input-placeholder{
      color: $font-gray-lighten;
      font-size: rem(30);
      font-weight: 300;
      line-height:normal!important;
    }
  }
  
  textarea{
    padding: rem(45) rem(30);
    line-height: 1.6;
    resize: none;
  }

  &.underline-type{
    &.prefix-icon{
      position: relative;
      input{
        padding: rem(30) rem(0) rem(30) rem(100);
      }
      [class*="icon-"]{
        position: absolute;
        top: 50%;
        left: rem(30);
        transform: translateY(-50%);
      }
    }
    input{
      border-bottom: rem(2) solid $default-border-gray;
      padding: rem(30);
      &::placeholder{
        font-size: rem(26);
        font-weight: 300;
      }
    }
  }
}
.input-formula{
  display: flex;
  .input-text-wrap{
    flex: 1 auto;
  }
}